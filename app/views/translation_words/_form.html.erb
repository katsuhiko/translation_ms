<%= form_for(@translation_word, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @translation_word.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@translation_word.errors.count, "error") %> prohibited this translation_word from being saved:</h4>

      <ul>
      <% @translation_word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :prev_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :prev_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cud_type, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cud_type, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :work, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :work, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :locale, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :locale, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :progress_status, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :progress_status, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
